{
    "hooks": {
        "pre": [
            { "command": "yarn" },
            { "command": "b" },
            { "command": "b", "args":"poke:version -s" },
            { "command": "yarn", "args": "changelog" },
            { "command": "git", "args": "add ."},
            { "command": "git", "args": "commit -m \"chore: new version %NEW_VERSION%\""},
            { "command": "git", "args": "push"}
        ]
    }
}